{
    "compilerOptions": {
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "incremental": true,
        "module": "commonjs",
        "moduleResolution": "Node",
        "noEmitOnError": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "removeComments": true,
        "outDir": "./build/",
        "rootDir": "./src",
        "strict": true,
        "types": ["node"],
        "target": "es2019",
        "esModuleInterop": true
    },
    "compileOnSave": true
}
